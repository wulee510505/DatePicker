<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/custom_dialog_sel" />
            <corners android:bottomLeftRadius="0.0dp" android:bottomRightRadius="4dp"
                android:radius="4dp" android:topLeftRadius="0.0dp" android:topRightRadius="0.0dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/custom_dialog_dis" />
            <corners android:bottomLeftRadius="0.0dp" android:bottomRightRadius="4dp"
                android:radius="4dp" android:topLeftRadius="0.0dp" android:topRightRadius="0.0dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/custom_dialog_nor" />
            <corners android:bottomLeftRadius="0.0dp" android:bottomRightRadius="4dp"
                android:radius="4dp" android:topLeftRadius="0.0dp" android:topRightRadius="0.0dp" />
        </shape>
    </item>
</selector>